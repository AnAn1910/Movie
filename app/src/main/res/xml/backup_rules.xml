<?xml version="1.0" encoding="utf-8"?><!--
   Sample backup rules file; uncomment and customize as necessary.
   See https://developer.android.com/guide/topics/data/autobackup
   for details.
   Note: This file is ignored for devices older that API 31
   See https://developer.android.com/about/versions/12/backup-restore
-->
<full-backup-content>
    <!-- Define the files and directories to include in the backup -->
    <include domain="file" path="shared_prefs/" />
    <include domain="file" path="databases/" />

    <!-- Exclude certain files and directories from the backup -->
    <exclude domain="file" path="databases/cache.db" />
    <exclude domain="file" path="shared_prefs/settings.xml" />
</full-backup-content>
